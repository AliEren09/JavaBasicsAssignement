import java.util.Scanner;
public class Rakamlarıtop {
	
	
	public static void main(String[]args) {
		
		
        Scanner deger = new Scanner(System.in);
        System.out.print("pozitif tamsayı girin: ");
        int sayi = deger.nextInt();
        
       
        int toplam = 0,geciciSayi = sayi;;
        
        
       
        
        
        while (geciciSayi != 0) {
            int rakam = geciciSayi % 10;
            toplam += rakam;
            geciciSayi /= 10;
        }
        
        
        System.out.println("rakamlari toplamı : " + toplam);
        
}
}
